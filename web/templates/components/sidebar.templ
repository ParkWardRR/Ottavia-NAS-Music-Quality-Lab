package components

templ Sidebar() {
	<aside class="fixed left-0 top-0 h-screen w-64 bg-white/80 dark:bg-gray-900/80 backdrop-blur-xl border-r border-gray-200/50 dark:border-gray-800/50 z-40 flex flex-col">
		<!-- Logo -->
		<div class="p-6 border-b border-gray-200/50 dark:border-gray-800/50">
			<a href="/" class="flex items-center gap-3">
				<div class="w-10 h-10 rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center shadow-lg shadow-blue-500/25">
					<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
					</svg>
				</div>
				<div>
					<h1 class="text-lg font-semibold bg-gradient-to-r from-gray-900 to-gray-600 dark:from-white dark:to-gray-400 bg-clip-text text-transparent">Seville</h1>
					<p class="text-xs text-gray-500 dark:text-gray-400">Music Quality Lab</p>
				</div>
			</a>
		</div>

		<!-- Navigation -->
		<nav class="flex-1 p-4 space-y-1 overflow-y-auto">
			<div class="mb-6">
				<p class="px-3 mb-2 text-xs font-medium text-gray-400 dark:text-gray-500 uppercase tracking-wider">Overview</p>
				@NavItem("/", "Dashboard", DashboardIcon())
				@NavItem("/libraries", "Libraries", LibraryIcon())
				@NavItem("/albums", "Albums", AlbumIcon())
				@NavItem("/tracks", "All Tracks", MusicIcon())
			</div>

			<div class="mb-6">
				<p class="px-3 mb-2 text-xs font-medium text-gray-400 dark:text-gray-500 uppercase tracking-wider">Analysis</p>
				@NavItem("/issues", "Issues", WarningIcon())
				@NavItem("/evidence", "Evidence", ChartIcon())
				@NavItem("/duplicates", "Duplicates", CopyIcon())
			</div>

			<div class="mb-6">
				<p class="px-3 mb-2 text-xs font-medium text-gray-400 dark:text-gray-500 uppercase tracking-wider">Tools</p>
				@NavItem("/conversions", "Conversions", ConvertIcon())
				@NavItem("/jobs", "Job Queue", QueueIcon())
			</div>
		</nav>

		<!-- Footer -->
		<div class="p-4 border-t border-gray-200/50 dark:border-gray-800/50">
			@NavItem("/settings", "Settings", SettingsIcon())
			<div class="mt-4 px-3">
				<div class="flex items-center gap-2 text-xs text-gray-400 dark:text-gray-500">
					<div class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></div>
					<span>All systems operational</span>
				</div>
			</div>
		</div>
	</aside>
}

templ NavItem(href, label string, icon templ.Component) {
	<a
		href={ templ.SafeURL(href) }
		class="flex items-center gap-3 px-3 py-2.5 rounded-xl text-sm font-medium text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100/80 dark:hover:bg-gray-800/80 transition-all duration-200 group"
		:class={ "{ 'bg-blue-50 dark:bg-blue-500/10 text-blue-600 dark:text-blue-400': $store.router.path === '" + href + "' }" }
	>
		<span class="w-5 h-5 opacity-60 group-hover:opacity-100 transition-opacity">
			@icon
		</span>
		<span>{ label }</span>
	</a>
}


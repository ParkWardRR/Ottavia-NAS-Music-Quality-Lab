package pages

import (
	"database/sql"
	"fmt"
	"strings"
	"github.com/ottavia-music/ottavia/web/templates/layouts"
	"github.com/ottavia-music/ottavia/web/templates/components"
	"github.com/ottavia-music/ottavia/internal/models"
)

templ TracksPage(tracks []models.Track, total int, filter string, settings map[string]string) {
	@layouts.Base("Tracks", settings) {
		<!-- Header -->
		<div class="mb-8">
			<div class="flex items-center justify-between">
				<div>
					<h1 class="text-3xl font-bold text-gray-900 dark:text-white">Tracks</h1>
					<p class="mt-1 text-gray-500 dark:text-gray-400">{ fmt.Sprintf("%d tracks in your library", total) }</p>
				</div>
				<div class="flex items-center gap-4">
					<!-- Search -->
					<div class="relative">
						<svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
						</svg>
						<input
							type="search"
							placeholder="Search tracks..."
							class="w-64 pl-10 pr-4 py-2.5 rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-900 dark:text-white placeholder-gray-400 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
						/>
					</div>
				</div>
			</div>
		</div>

		<!-- Filters -->
		<div class="flex items-center gap-2 mb-6">
			<a
				href="/tracks"
				class={ fmt.Sprintf("px-4 py-2 rounded-xl text-sm font-medium transition-colors %s", getFilterClass(filter, "")) }
			>
				All Tracks
			</a>
			<a
				href="/tracks?filter=issues"
				class={ fmt.Sprintf("px-4 py-2 rounded-xl text-sm font-medium transition-colors %s", getFilterClass(filter, "issues")) }
			>
				<svg class="w-4 h-4 inline-block mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
				</svg>
				With Issues
			</a>
			<a
				href="/tracks?filter=untagged"
				class={ fmt.Sprintf("px-4 py-2 rounded-xl text-sm font-medium transition-colors %s", getFilterClass(filter, "untagged")) }
			>
				<svg class="w-4 h-4 inline-block mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
				</svg>
				Missing Tags
			</a>
			<a
				href="/tracks?filter=lossy"
				class={ fmt.Sprintf("px-4 py-2 rounded-xl text-sm font-medium transition-colors %s", getFilterClass(filter, "lossy")) }
			>
				<svg class="w-4 h-4 inline-block mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
				</svg>
				Likely Lossy
			</a>
		</div>

		<!-- Tracks Table -->
		<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
			if len(tracks) == 0 {
				<div class="p-12 text-center">
					<div class="w-16 h-16 mx-auto rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center mb-4">
						<svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
						</svg>
					</div>
					<h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No tracks found</h3>
					<p class="text-gray-500 dark:text-gray-400">
						if filter != "" {
							No tracks match the current filter
						} else {
							Add a library and run a scan to see your tracks
						}
					</p>
				</div>
			} else {
				<div class="overflow-x-auto">
					<table class="w-full">
						<thead>
							<tr class="text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider border-b border-gray-200/50 dark:border-gray-800/50 bg-gray-50/50 dark:bg-gray-800/30">
								<th class="px-6 py-4">Track</th>
								<th class="px-6 py-4">Album</th>
								<th class="px-6 py-4">Format</th>
								<th class="px-6 py-4">Duration</th>
								<th class="px-6 py-4">Quality</th>
								<th class="px-6 py-4"></th>
							</tr>
						</thead>
						<tbody class="divide-y divide-gray-200/50 dark:divide-gray-800/50">
							for _, track := range tracks {
								@components.TrackRow(track, nil)
							}
						</tbody>
					</table>
				</div>

				<!-- Pagination -->
				<div class="px-6 py-4 border-t border-gray-200/50 dark:border-gray-800/50 flex items-center justify-between">
					<p class="text-sm text-gray-500 dark:text-gray-400">
						Showing { fmt.Sprintf("%d", len(tracks)) } of { fmt.Sprintf("%d", total) } tracks
					</p>
					<div class="flex items-center gap-2">
						<button class="px-3 py-1.5 rounded-lg text-sm font-medium text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 disabled:opacity-50 disabled:cursor-not-allowed transition-colors" disabled>
							Previous
						</button>
						<button class="px-3 py-1.5 rounded-lg text-sm font-medium text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
							Next
						</button>
					</div>
				</div>
			}
		</div>
	}
}

templ TrackDetail(track *models.Track, analysis *models.AnalysisResult, artifacts []models.Artifact, settings map[string]string) {
	@layouts.Base(getTrackTitle(track), settings) {
		<!-- Breadcrumb -->
		<nav class="flex items-center gap-2 text-sm mb-6">
			<a href="/tracks" class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">Tracks</a>
			<svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
			</svg>
			<span class="text-gray-900 dark:text-white font-medium">{ getTrackTitle(track) }</span>
		</nav>

		<div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
			<!-- Main Content -->
			<div class="lg:col-span-2 space-y-6">
				<!-- Track Header with Quality Badges -->
				<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 p-6">
					<div class="flex items-start gap-6">
						<div class="w-24 h-24 rounded-xl bg-gradient-to-br from-purple-500 to-pink-600 flex items-center justify-center shadow-lg shadow-purple-500/25 flex-shrink-0">
							<svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
							</svg>
						</div>
						<div class="flex-1 min-w-0">
							<h1 class="text-2xl font-bold text-gray-900 dark:text-white truncate">{ getTrackTitle(track) }</h1>
							if track.Artist.Valid {
								<p class="text-lg text-gray-600 dark:text-gray-300 mt-1">{ track.Artist.String }</p>
							}
							if track.Album.Valid {
								<p class="text-gray-500 dark:text-gray-400 mt-1">{ track.Album.String }</p>
							}
							<div class="flex flex-wrap items-center gap-2 mt-4">
								<span class="px-3 py-1.5 rounded-lg bg-gray-100 dark:bg-gray-800 text-sm font-mono uppercase">{ track.Codec }</span>
								<span class="text-sm text-gray-500 dark:text-gray-400">
									{ fmt.Sprintf("%d kHz / %d-bit / %dch", track.SampleRate/1000, track.BitDepth, track.Channels) }
								</span>
								<span class="text-sm text-gray-500 dark:text-gray-400">
									{ formatDuration(track.Duration) }
								</span>
							</div>
						</div>
					</div>

					<!-- Quality Summary Badges -->
					if analysis != nil {
						<div class="mt-6 pt-6 border-t border-gray-200/50 dark:border-gray-800/50">
							<h3 class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3">Quality Summary</h3>
							<div class="flex flex-wrap gap-2">
								if isLosslessFormat(track.Codec) {
									@TrackQualityBadge("Authenticity", analysis.LosslessStatus, getLosslessShortLabel(analysis.LosslessStatus))
								}
								@TrackQualityBadge("Integrity", getIntegrityStatus(analysis), getIntegrityShortLabel(analysis))
								@TrackQualityBadge("Dynamics", getDRStatus(analysis), fmt.Sprintf("DR%d", calculateDR(analysis)))
								@TrackQualityBadge("Clipping", getClippingStatus(analysis), getClippingShortLabel(analysis))
							</div>
						</div>
					}
				</div>

				if analysis != nil {
					if isLosslessFormat(track.Codec) {
						<!-- Lossless Authenticity Analysis - only shown for lossless formats -->
						<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
							<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50 flex items-center justify-between">
								<div class="flex items-center gap-3">
									@StatusIcon(analysis.LosslessStatus)
									<h2 class="text-lg font-semibold text-gray-900 dark:text-white">Lossless Authenticity</h2>
								</div>
								@TrackQualityBadge("", analysis.LosslessStatus, getLosslessShortLabel(analysis.LosslessStatus))
							</div>
							<div class="p-6">
								<p class={ fmt.Sprintf("text-sm mb-4 %s", getLosslessTextColor(analysis.LosslessStatus)) }>
									{ getLosslessExplanation(analysis, track) }
								</p>
								<div class="grid grid-cols-2 gap-4">
									<div class="p-4 rounded-xl bg-gray-50 dark:bg-gray-800/50">
										<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">High Freq Cutoff</p>
										<p class="text-xl font-bold text-gray-900 dark:text-white mt-1">
											if analysis.HighFreqCutoff > 0 {
												{ fmt.Sprintf("%.1f kHz", analysis.HighFreqCutoff/1000) }
											} else {
												N/A
											}
										</p>
										<p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Expected: { fmt.Sprintf("%.1f kHz", float64(track.SampleRate)/2000) }</p>
									</div>
									<div class="p-4 rounded-xl bg-gray-50 dark:bg-gray-800/50">
										<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Confidence Score</p>
										<p class="text-xl font-bold text-gray-900 dark:text-white mt-1">{ fmt.Sprintf("%.0f%%", analysis.LosslessScore) }</p>
										<p class="text-xs text-gray-500 dark:text-gray-400 mt-1">{ getConfidenceText(analysis.LosslessScore) }</p>
									</div>
								</div>
							</div>
						</div>
					}

					<!-- Dynamic Range (Loudness War) Analysis -->
					<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50 flex items-center justify-between">
							<div class="flex items-center gap-3">
								@StatusIcon(getDRStatus(analysis))
								<h2 class="text-lg font-semibold text-gray-900 dark:text-white">Dynamic Range</h2>
							</div>
							@TrackDRBadge(calculateDR(analysis))
						</div>
						<div class="p-6">
							<div class="flex items-center gap-6 mb-6">
								<div class="text-center">
									<div class={ fmt.Sprintf("text-5xl font-bold %s", getDRColor(calculateDR(analysis))) }>
										DR{ fmt.Sprintf("%d", calculateDR(analysis)) }
									</div>
									<p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{ getDRRating(calculateDR(analysis)) }</p>
								</div>
								<div class="flex-1">
									<p class="text-sm text-gray-600 dark:text-gray-300">{ getDRExplanation(calculateDR(analysis)) }</p>
								</div>
							</div>

							<!-- DR Visual Scale -->
							<div class="mb-6">
								<div class="flex justify-between text-xs text-gray-500 dark:text-gray-400 mb-1">
									<span>Crushed</span>
									<span>Limited</span>
									<span>Moderate</span>
									<span>Good</span>
									<span>Excellent</span>
								</div>
								<div class="h-3 bg-gradient-to-r from-red-500 via-orange-500 via-yellow-500 via-green-500 to-emerald-500 rounded-full relative">
									<div class="absolute top-0 bottom-0 w-1 bg-white shadow-lg rounded-full transform -translate-x-1/2" style={ fmt.Sprintf("left: %d%%", minInt(calculateDR(analysis)*5, 100)) }></div>
								</div>
							</div>

							<div class="grid grid-cols-3 gap-4">
								<div class="p-4 rounded-xl bg-gray-50 dark:bg-gray-800/50">
									<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Loudness</p>
									<p class="text-xl font-bold text-gray-900 dark:text-white mt-1">{ fmt.Sprintf("%.1f", analysis.IntegratedLoudness) }</p>
									<p class="text-xs text-gray-500 dark:text-gray-400">LUFS</p>
								</div>
								<div class="p-4 rounded-xl bg-gray-50 dark:bg-gray-800/50">
									<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Range</p>
									<p class="text-xl font-bold text-gray-900 dark:text-white mt-1">{ fmt.Sprintf("%.1f", analysis.LoudnessRange) }</p>
									<p class="text-xs text-gray-500 dark:text-gray-400">LU</p>
								</div>
								<div class="p-4 rounded-xl bg-gray-50 dark:bg-gray-800/50">
									<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Crest Factor</p>
									<p class="text-xl font-bold text-gray-900 dark:text-white mt-1">{ fmt.Sprintf("%.1f", analysis.CrestFactor) }</p>
									<p class="text-xs text-gray-500 dark:text-gray-400">dB</p>
								</div>
							</div>
						</div>
					</div>

					<!-- Audio Integrity & Levels -->
					<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50 flex items-center justify-between">
							<div class="flex items-center gap-3">
								@StatusIcon(getIntegrityStatus(analysis))
								<h2 class="text-lg font-semibold text-gray-900 dark:text-white">Audio Integrity & Levels</h2>
							</div>
							@TrackQualityBadge("", getIntegrityStatus(analysis), getIntegrityShortLabel(analysis))
						</div>
						<div class="p-6">
							<div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
								@ProStat("Peak Level", fmt.Sprintf("%.1f dB", analysis.PeakLevel), analysis.PeakLevel > 0, "Max amplitude")
								@ProStat("True Peak", fmt.Sprintf("%.1f dB", analysis.TruePeak), analysis.TruePeak > 0, "Inter-sample peak")
								@ProStat("Clipped", fmt.Sprintf("%d", analysis.ClippedSamples), analysis.ClippedSamples > 0, "samples")
								@ProStat("DC Offset", fmt.Sprintf("%.3f", analysis.DCOffset), analysis.DCOffset > 0.01 || analysis.DCOffset < -0.01, "baseline shift")
							</div>

							if analysis.ClippedSamples > 0 {
								<div class="p-4 rounded-xl bg-amber-50 dark:bg-amber-500/10 border border-amber-200 dark:border-amber-500/20">
									<div class="flex items-start gap-3">
										<svg class="w-5 h-5 text-amber-600 dark:text-amber-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
										</svg>
										<div>
											<p class="text-sm font-medium text-amber-800 dark:text-amber-300">Clipping Detected</p>
											<p class="text-sm text-amber-700 dark:text-amber-400 mt-1">
												{ fmt.Sprintf("%d clipped samples found. This causes distortion and is typically from aggressive mastering.", analysis.ClippedSamples) }
											</p>
										</div>
									</div>
								</div>
							}

							if !analysis.IntegrityOK {
								<div class="p-4 rounded-xl bg-red-50 dark:bg-red-500/10 border border-red-200 dark:border-red-500/20 mt-4">
									<div class="flex items-start gap-3">
										<svg class="w-5 h-5 text-red-600 dark:text-red-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
										</svg>
										<div>
											<p class="text-sm font-medium text-red-800 dark:text-red-300">File Integrity Issues</p>
											<p class="text-sm text-red-700 dark:text-red-400 mt-1">
												{ fmt.Sprintf("%d decode errors detected. The file may be corrupted.", analysis.DecodeErrors) }
											</p>
										</div>
									</div>
								</div>
							}
						</div>
					</div>

					<!-- Technical Details -->
					<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50">
							<h2 class="text-lg font-semibold text-gray-900 dark:text-white">Technical Details</h2>
						</div>
						<div class="p-6 grid grid-cols-2 gap-4">
							<div class="p-4 rounded-xl bg-gray-50 dark:bg-gray-800/50">
								<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Spectral Rolloff</p>
								<p class="text-lg font-bold text-gray-900 dark:text-white mt-1">
									if analysis.SpectralRolloff > 0 {
										{ fmt.Sprintf("%.1f kHz", analysis.SpectralRolloff/1000) }
									} else {
										N/A
									}
								</p>
							</div>
							<div class="p-4 rounded-xl bg-gray-50 dark:bg-gray-800/50">
								<p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Phase Correlation</p>
								<p class="text-lg font-bold text-gray-900 dark:text-white mt-1">{ fmt.Sprintf("%.2f", analysis.PhaseCorrelation) }</p>
							</div>
						</div>
					</div>

					<!-- Issues -->
					if len(analysis.Issues) > 0 {
						<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
							<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50">
								<h2 class="text-lg font-semibold text-gray-900 dark:text-white">Issues ({ fmt.Sprintf("%d", len(analysis.Issues)) })</h2>
							</div>
							<div class="p-6 space-y-3">
								for _, issue := range analysis.Issues {
									@IssueCard(issue)
								}
							</div>
						</div>
					}
				}

				<!-- Evidence Artifacts -->
				if len(artifacts) > 0 {
					<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50">
							<h2 class="text-lg font-semibold text-gray-900 dark:text-white">Visual Evidence</h2>
						</div>
						<div class="p-6 space-y-6">
							for _, artifact := range artifacts {
								<div>
									<h3 class="text-sm font-medium text-gray-900 dark:text-white mb-2 capitalize">{ artifact.Type }</h3>
									<div class="rounded-xl overflow-hidden bg-gray-100 dark:bg-gray-800">
										<img src={ fmt.Sprintf("/artifacts/%s", artifact.ID) } alt={ artifact.Type } class="w-full"/>
									</div>
								</div>
							}
						</div>
					</div>
				}

				<!-- Audio Scan Analysis (Dynamic) -->
				@AudioScanPanels(track.ID)
			</div>

			<!-- Sidebar -->
			<div class="space-y-6">
				<!-- Quick Assessment -->
				if analysis != nil {
					<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50">
							<h2 class="text-lg font-semibold text-gray-900 dark:text-white">Quick Assessment</h2>
						</div>
						<div class="p-6 space-y-3">
							if isLosslessFormat(track.Codec) {
								@AssessmentRow("Authentic Lossless", analysis.LosslessStatus == "pass")
							} else {
								@AssessmentRow("Lossy Format", true)
							}
							@AssessmentRow("No Clipping", analysis.ClippedSamples == 0)
							@AssessmentRow("Good Dynamics", calculateDR(analysis) >= 10)
							@AssessmentRow("File Integrity", analysis.IntegrityOK)
							@AssessmentRow("Proper Levels", analysis.PeakLevel <= 0 && analysis.TruePeak <= 0)
						</div>
					</div>
				}

				<!-- Metadata -->
				<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
					<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50">
						<h2 class="text-lg font-semibold text-gray-900 dark:text-white">Metadata</h2>
					</div>
					<div class="p-6 space-y-4">
						@MetadataRow("Title", getOptionalString(track.Title))
						@MetadataRow("Artist", getOptionalString(track.Artist))
						@MetadataRow("Album", getOptionalString(track.Album))
						@MetadataRow("Album Artist", getOptionalString(track.AlbumArtist))
						@MetadataRow("Track", getOptionalInt(track.TrackNumber))
						@MetadataRow("Disc", getOptionalInt(track.DiscNumber))
						@MetadataRow("Year", getOptionalInt(track.Year))
						@MetadataRow("Genre", getOptionalString(track.Genre))
					</div>
				</div>

				<!-- File Info -->
				<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
					<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50">
						<h2 class="text-lg font-semibold text-gray-900 dark:text-white">File Info</h2>
					</div>
					<div class="p-6 space-y-4">
						@MetadataRow("Codec", strings.ToUpper(track.Codec))
						@MetadataRow("Sample Rate", fmt.Sprintf("%d Hz", track.SampleRate))
						@MetadataRow("Bit Depth", fmt.Sprintf("%d-bit", track.BitDepth))
						@MetadataRow("Channels", fmt.Sprintf("%d", track.Channels))
						@MetadataRow("Duration", formatDuration(track.Duration))
						if track.Bitrate > 0 {
							@MetadataRow("Bitrate", fmt.Sprintf("%d kbps", track.Bitrate/1000))
						}
					</div>
				</div>

				<!-- Actions -->
				<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden">
					<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50">
						<h2 class="text-lg font-semibold text-gray-900 dark:text-white">Actions</h2>
					</div>
					<div class="p-6 space-y-3">
						<button class="w-full flex items-center gap-3 px-4 py-3 rounded-xl border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
							</svg>
							Re-analyze
						</button>
						<button class="w-full flex items-center gap-3 px-4 py-3 rounded-xl border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
							</svg>
							Export Evidence
						</button>
					</div>
				</div>
			</div>
		</div>
	}
}


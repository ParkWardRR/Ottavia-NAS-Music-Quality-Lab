		class="space-y-6"
	>
		<!-- Loading State -->
		<template x-if="loading">
			<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 p-6">
				<div class="flex items-center justify-center gap-3">
					<svg class="animate-spin w-5 h-5 text-blue-500" fill="none" viewBox="0 0 24 24">
						<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
						<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
					</svg>
					<span class="text-gray-500 dark:text-gray-400">Loading Audio Scan analysis...</span>
				</div>
			</div>
		</template>

		<!-- Audio Scan Panels (when manifest is loaded) -->
		<template x-if="!loading && manifest">
			<div class="space-y-6">
				<!-- Audio Scan Spectrum Panel -->
				<template x-if="manifest.modules && manifest.modules.audioscan && manifest.modules.audioscan.status === 'ok'">
					@DynamicChartPanel(trackID, "audioscan", "Audio Scan-style Spectrum",
						`<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>`,
						"bg-purple-100 dark:bg-purple-500/20",
						"text-purple-600 dark:text-purple-400",
						"bg-purple-100 dark:bg-purple-500/20 text-purple-700 dark:text-purple-400")
				</template>

				<!-- Loudness Panel -->
				<template x-if="manifest.modules && manifest.modules.loudness && manifest.modules.loudness.status === 'ok'">
					@DynamicChartPanel(trackID, "loudness", "Loudness Timeline",
						`<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>`,
						"bg-blue-100 dark:bg-blue-500/20",
						"text-blue-600 dark:text-blue-400",
						"bg-blue-100 dark:bg-blue-500/20 text-blue-700 dark:text-blue-400")
				</template>

				<!-- Clipping Panel -->
				<template x-if="manifest.modules && manifest.modules.clipping && manifest.modules.clipping.status === 'ok'">
					@DynamicChartPanel(trackID, "clipping", "Clipping Detection",
						`<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>`,
						"bg-red-100 dark:bg-red-500/20",
						"text-red-600 dark:text-red-400",
						"bg-red-100 dark:bg-red-500/20 text-red-700 dark:text-red-400")
				</template>

				<!-- Phase Correlation Panel -->
				<template x-if="manifest.modules && manifest.modules.phase && manifest.modules.phase.status === 'ok'">
					@DynamicChartPanel(trackID, "phase", "Stereo Phase Correlation",
						`<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>`,
						"bg-teal-100 dark:bg-teal-500/20",
						"text-teal-600 dark:text-teal-400",
						"bg-teal-100 dark:bg-teal-500/20 text-teal-700 dark:text-teal-400")
				</template>

				<!-- Dynamics Panel -->
				<template x-if="manifest.modules && manifest.modules.dynamics && manifest.modules.dynamics.status === 'ok'">
					@DynamicChartPanel(trackID, "dynamics", "Dynamics Segmentation",
						`<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>`,
						"bg-orange-100 dark:bg-orange-500/20",
						"text-orange-600 dark:text-orange-400",
						"bg-orange-100 dark:bg-orange-500/20 text-orange-700 dark:text-orange-400")
				</template>

				<!-- Phase Skipped Notice -->
				<template x-if="manifest.modules && manifest.modules.phase && manifest.modules.phase.status === 'skipped'">
					<div class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 p-6">
						<div class="flex items-center gap-3 text-gray-500 dark:text-gray-400">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
							<span>Phase analysis skipped - mono track</span>
						</div>
					</div>
				</template>
			</div>
		</template>

		<!-- Run Audio Scan Button (when no manifest) -->
		<template x-if="!loading && !manifest">
			<div
				x-data={ fmt.Sprintf(`{
					scanning: false,
					jobId: null,
					logs: [],
					logIndex: 0,
					status: '',
					async runScan() {
						this.scanning = true;
						this.logs = [];
						this.logIndex = 0;
						this.status = 'starting';
						try {
							const response = await fetch('/api/tracks/%s/audioscan', { method: 'POST' });
							const result = await response.json();
							if (result.status === 'queued') {
								this.jobId = result.jobId;
								this.status = 'running';
								this.pollLogs();
							}
						} catch (e) {
							this.logs.push({ level: 'error', message: 'Failed to start scan: ' + e.message });
							this.status = 'failed';
							this.scanning = false;
						}
					},
					async pollLogs() {
						if (!this.jobId) return;
						try {
							const response = await fetch('/api/jobs/' + this.jobId + '/logs?since=' + this.logIndex);
							if (response.ok) {
								const data = await response.json();
								this.logs = [...this.logs, ...data.entries];
								this.logIndex = data.nextIndex;
								this.status = data.status;
								if (data.status === 'running') {
									setTimeout(() => this.pollLogs(), 500);
								} else if (data.status === 'completed') {
									$data.loading = true;
									await $data.loadManifest();
									this.scanning = false;
								} else {
									this.scanning = false;
								}
							}
						} catch (e) {
							console.error('Failed to poll logs:', e);
							setTimeout(() => this.pollLogs(), 1000);
						}
					},
					levelColor(level) {
						switch(level) {
							case 'error': return 'text-red-500';
							case 'warn': return 'text-yellow-500';
							case 'debug': return 'text-gray-400';
							default: return 'text-green-500';
						}
					}
				}`, trackID) }
				class="bg-white dark:bg-gray-900 rounded-2xl shadow-sm border border-gray-200/50 dark:border-gray-800/50 overflow-hidden"
			>
				<!-- Header -->
				<div class="p-6 text-center" x-show="!scanning">
					<div class="w-16 h-16 mx-auto rounded-full bg-purple-100 dark:bg-purple-500/20 flex items-center justify-center mb-4">
						<svg class="w-8 h-8 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
						</svg>
					</div>
					<h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Audio Scan-style Analysis</h3>
					<p class="text-gray-500 dark:text-gray-400 mb-6">
						Run detailed spectrum, loudness, clipping, phase, and dynamics analysis on this track.
					</p>
					<button
						@click="runScan()"
						class="inline-flex items-center gap-2 px-6 py-3 rounded-xl bg-purple-600 text-white font-medium hover:bg-purple-700 transition-colors"
					>
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
						</svg>
						Run Audio Scan
					</button>
				</div>

				<!-- Scanning Progress with Verbose Log -->
				<div x-show="scanning" class="flex flex-col">
					<div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-800/50 flex items-center justify-between">
						<div class="flex items-center gap-3">
							<svg class="animate-spin w-5 h-5 text-purple-500" fill="none" viewBox="0 0 24 24">
								<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
								<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
							</svg>
							<span class="font-medium text-gray-900 dark:text-white">Running Audio Scan Analysis</span>
						</div>
						<span
							class="px-2.5 py-1 rounded-lg text-xs font-medium uppercase"
							:class="status === 'running' ? 'bg-blue-100 dark:bg-blue-500/20 text-blue-600 dark:text-blue-400' : status === 'completed' ? 'bg-green-100 dark:bg-green-500/20 text-green-600 dark:text-green-400' : 'bg-red-100 dark:bg-red-500/20 text-red-600 dark:text-red-400'"
							x-text="status"
						></span>
					</div>
					<div class="bg-gray-900 text-gray-100 p-4 font-mono text-sm h-80 overflow-y-auto" x-ref="logContainer">
						<template x-for="(log, index) in logs" :key="index">
							<div class="flex gap-2 py-0.5">
								<span class="text-gray-500 select-none" x-text="new Date(log.timestamp).toLocaleTimeString()"></span>
								<span :class="levelColor(log.level)" class="uppercase text-xs font-bold w-12" x-text="log.level"></span>
								<span class="text-gray-400" x-show="log.module" x-text="'[' + log.module + ']'"></span>
								<span x-text="log.message"></span>
								<span class="text-gray-500" x-show="log.details" x-text="log.details"></span>
							</div>
						</template>
						<div x-show="status === 'running'" class="flex items-center gap-2 py-1 text-gray-400">
							<span class="animate-pulse">â–‹</span>
						</div>
					</div>
				</div>
			</div>
		</template>
	</div>
}

func getOptionalString(s sql.NullString) string {
	if s.Valid {
		return s.String
	}
	return ""
}

func getOptionalInt(i sql.NullInt32) string {
	if i.Valid {
		return fmt.Sprintf("%d", i.Int32)
	}
	return ""
}

func formatDuration(seconds float64) string {
	total := int(seconds)
	hrs := total / 3600
	mins := (total % 3600) / 60
	secs := total % 60
	if hrs > 0 {
		return fmt.Sprintf("%d:%02d:%02d", hrs, mins, secs)
	}
	return fmt.Sprintf("%d:%02d", mins, secs)
}

// Analysis helper functions

func getLosslessShortLabel(status string) string {
	switch status {
	case "pass":
		return "Verified"
	case "fail":
		return "Suspicious"
	default:
		return "Warning"
	}
}

func getLosslessTextColor(status string) string {
	switch status {
	case "pass":
		return "text-emerald-700 dark:text-emerald-300"
	case "fail":
		return "text-red-700 dark:text-red-300"
	default:
		return "text-amber-700 dark:text-amber-300"
	}
}

func getLosslessExplanation(analysis *models.AnalysisResult, track *models.Track) string {
	if analysis.LosslessStatus == "pass" {
		return "This file appears to be genuine lossless audio. High-frequency content extends naturally to the expected range, indicating it wasn't converted from a lossy source."
	}
	if analysis.LosslessStatus == "warn" {
		return fmt.Sprintf("This %s file shows signs it may have been converted from a lossy source. High frequencies appear to cut off around %.0f Hz instead of extending to %.0f Hz.", strings.ToUpper(track.Codec), analysis.HighFreqCutoff, float64(track.SampleRate)/2)
	}
	return fmt.Sprintf("Strong evidence this %s file was converted from a lossy source. The audio shows a hard frequency cutoff around %.0f Hz - a telltale sign of MP3/AAC compression.", strings.ToUpper(track.Codec), analysis.HighFreqCutoff)
}

func getConfidenceText(score float64) string {
	if score >= 90 {
		return "High confidence"
	}
	if score >= 70 {
		return "Moderate confidence"
	}
	return "Low confidence"
}

func getIntegrityStatus(analysis *models.AnalysisResult) string {
	if !analysis.IntegrityOK || analysis.DecodeErrors > 0 {
		return "fail"
	}
	if analysis.ClippedSamples > 100 {
		return "warn"
	}
	return "pass"
}

func getIntegrityShortLabel(analysis *models.AnalysisResult) string {
	if !analysis.IntegrityOK {
		return "Corrupted"
	}
	if analysis.ClippedSamples > 0 {
		return "Clipping"
	}
	return "OK"
}

func getClippingStatus(analysis *models.AnalysisResult) string {
	if analysis.ClippedSamples > 100 {
		return "fail"
	}
	if analysis.ClippedSamples > 0 {
		return "warn"
	}
	return "pass"
}

func getClippingShortLabel(analysis *models.AnalysisResult) string {
	if analysis.ClippedSamples > 0 {
		return fmt.Sprintf("%d clips", analysis.ClippedSamples)
	}
	return "None"
}

func calculateDR(analysis *models.AnalysisResult) int {
	dr := int(analysis.LoudnessRange + analysis.CrestFactor/2)
	if dr < 1 {
		return 1
	}
	if dr > 20 {
		return 20
	}
	return dr
}

func getDRStatus(analysis *models.AnalysisResult) string {
	dr := calculateDR(analysis)
	if dr >= 10 {
		return "pass"
	}
	if dr >= 7 {
		return "warn"
	}
	return "fail"
}

func getDRColor(dr int) string {
	switch {
	case dr >= 14:
		return "text-emerald-600 dark:text-emerald-400"
	case dr >= 10:
		return "text-green-600 dark:text-green-400"
	case dr >= 7:
		return "text-yellow-600 dark:text-yellow-400"
	case dr >= 4:
		return "text-orange-600 dark:text-orange-400"
	default:
		return "text-red-600 dark:text-red-400"
	}
}

func getDRRating(dr int) string {
	switch {
	case dr >= 14:
		return "Excellent"
	case dr >= 10:
		return "Good"
	case dr >= 7:
		return "Moderate"
	case dr >= 4:
		return "Limited"
	default:
		return "Crushed"
	}
}

func getDRExplanation(dr int) string {
	switch {
	case dr >= 14:
		return "Excellent dynamic range. This track breathes naturally with clear distinction between quiet and loud moments. Perfect for critical listening."
	case dr >= 10:
		return "Good dynamics. Well-mastered with reasonable contrast between quiet and loud sections."
	case dr >= 7:
		return "Moderate dynamics. Some compression was applied during mastering, reducing the difference between quiet and loud parts."
	case dr >= 4:
		return "Limited dynamic range - a casualty of the 'loudness wars'. The audio is heavily compressed to sound louder, losing musical nuance."
	default:
		return "Heavily compressed (brickwalled). Almost no difference between quiet and loud sections. Common in modern pop/rock releases."
	}
}

func minInt(a, b int) int {
	if a < b {
		return a
	}
	return b
}

// isLosslessFormat returns true for lossless audio codecs where authenticity checking makes sense
func isLosslessFormat(codec string) bool {
	switch strings.ToLower(codec) {
	case "flac", "alac", "wav", "aiff", "ape", "wv", "wavpack", "tta", "dsd", "dsf", "dff":
		return true
	default:
		return false
	}
}

func getArtifactPrefix(trackID string) string {
	if len(trackID) >= 2 {
		return trackID[:2]
	}
	return trackID
}

